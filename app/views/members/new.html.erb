<%= link_to 'Home', "http://localhost:3000/" %>
<%= link_to 'All Members', members_path %>

<h1>New Member</h1>
<%if Team.all.length > 0%>
  <%= form_for @member do |f| %>
    <%= f.label "First Name*" %>
    <%= f.text_field :first_name %>

    <%= f.label "Last Name*" %>
    <%= f.text_field :last_name %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label "Team*" %>
    <%= f.collection_select :team_id, Team.all, :id, :name %>

    <%= f.label :project_ids %>
    <%= f.collection_select :project_ids, Project.all, :id, :name, {}, { multiple: true } %>

    <%= f.submit 'Create Member' %>
  <% end %>
<%else%>
  <h2>No Teams available to link a Member to</h2>
  <p>There must be at least one team to create a member</p>
  <%= link_to 'Create New Team', new_team_path %>
<%end%>